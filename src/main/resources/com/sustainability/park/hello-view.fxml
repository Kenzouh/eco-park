<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane minHeight="370.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectsss.HelloController">
    <!-- Search TextField and ComboBox -->
    <VBox spacing="10">
        <HBox spacing="10.0">
            <ComboBox fx:id="categoryComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Plants" />
                        <String fx:value="Animals" />
                        <String fx:value="Waste" />
                    </FXCollections>
                </items>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </ComboBox>
            <TextField fx:id="searchTextField" prefHeight="26.0" prefWidth="417.0" promptText="Search..." />
            <Button mnemonicParsing="false" text="Search" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>

        <!-- StackPane containing different pages -->
        <StackPane fx:id="contentStackPane" prefHeight="370.0" prefWidth="600.0">
            <children>
                <AnchorPane fx:id="plantsPane" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <TableView fx:id="plantsTableView" prefHeight="335.0" prefWidth="600.0">
                            <columns>
                                <TableColumn prefWidth="75.0" text="C1" />
                                <TableColumn prefWidth="75.0" text="C2" />
                                <TableColumn prefWidth="75.0" text="C3" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="animalsPane" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <TableView fx:id="animalsTableView" prefHeight="370.0" prefWidth="600.0" style="-fx-background-color: #cecece;">
                            <columns>
                                <TableColumn prefWidth="75.0" text="C1" />
                                <TableColumn prefWidth="75.0" text="C2" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="wastePane" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <TableView fx:id="wasteTableView" prefHeight="370.0" prefWidth="600.0">
                            <columns>
                                <TableColumn prefWidth="75.0" text="C1" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </children>
        </StackPane>
    </VBox>
</StackPane>
